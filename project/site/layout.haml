!!! 5
%html
  %head
    %meta{:charset => "UTF-8"}
    %link{:rel => "shortcut icon", :href => "images/favicon.png"}
    %title
      Luca Ongaro -
      = @current_page.respond_to?(:title) ? @current_page.title : @current_page.name.titleize
    = stylesheet_link_tag "style.css", :media => "screen"
    /[if IE 7]
      = stylesheet_link_tag 'ie7.css'
    /[if IE 6]
      = stylesheet_link_tag 'ie6.css'
    /[if IE]
      = stylesheet_link_tag 'ie.css'
    = javascript_include_tag :all

  %body
    #wrap
      #header
        = partial :header
      #sidebar
        = partial :sidebar
      #content
        = partial :content
      .clear.centered.footer
        %span{:style => "font-family: 'Zapf Dingbats'"} &#9733;
        == This website is 100% pure #{link_to "Moka", "http://moka.primegap.net/"} brewed
        %span{:style => "font-family: 'Zapf Dingbats'"} &#9733;

    %a{:href => "http://github.com/lucaong"}
      %img{:style => "position: absolute; top: 0; right: 0; border: 0;", :src => "https://a248.e.akamai.net/assets.github.com/img/e6bef7a091f5f3138b8cd40bc3e114258dd68ddf/687474703a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67", :alt => "Fork me on GitHub"}

    :javascript

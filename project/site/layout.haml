        $("html").noiseGen({
          width: 70,
          height: 50,
          fromColor: "fef5e4",
          toColor: "ede5d4",
          opacity: 1,
          independentChannels: false,
          grainDimension: 1,
          bias: 3,
          distribution: "bell",
          useCache: true
        });
        $("#wrap").noiseGen({
          width: 70,
          height: 70,
          fromColor: "000000",
          toColor: "ffffff",
          opacity: 0.25,
